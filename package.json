{
  "name": "communityclips",
  "version": "1.0.0",
  "description": "Aplicaci√≥n de escritorio para automatizar la subida de clips a YouTube",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "youtube",
    "upload",
    "clips",
    "electron",
    "nodejs"
  ],
  "author": "CommunityClips",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "googleapis": "^128.0.0",
    "dotenv": "^16.3.1",
    "fs-extra": "^11.1.1",
    "p-queue": "^6.6.2",
    "progress-stream": "^2.0.0"
  },
  "build": {
    "appId": "com.communityclips.app",
    "productName": "CommunityClips",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**/*",
      "!node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}